<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/gift_control_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_background">
        <TextView
            android:id="@+id/gift_back_textBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/app_train_arrow_left"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white_color"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="祝福物语"
            android:textColor="@color/white_color"
            android:textSize="25sp"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/birthday_bg1"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/happy_birthday_ico"/>
        <EditText
            android:id="@+id/gift_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:gravity="top"
            android:hint="输入您的祝福吧..."
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minLines="3"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@null"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/gift_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="将这张贺卡发送送出去"
            android:layout_marginBottom="150dp"
            android:background="@drawable/button_shape"
            android:layout_gravity="center_horizontal|bottom"/>
    </FrameLayout>


</LinearLayout>