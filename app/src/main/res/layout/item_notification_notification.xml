<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp" >
        <com.geekband.huzhouapp.custom.CircleImage
        	android:id="@+id/iv_notification_userHead"
        	android:src="@drawable/head1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_vertical"
        	android:layout_margin="5dp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <TextView
            	android:id="@+id/tv_notification_userName"
            	android:text="令狐冲"
            	android:textColor="#2894FF"
            	android:textStyle="bold"
            	android:singleLine="true"
            	android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
            	android:gravity="center_vertical" />
            <TextView
            	android:id="@+id/tv_notification_time"
                android:text="凌晨 04:02"
                android:textColor="#A9A9A9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:gravity="center" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_notification_content"
            android:text="你好，我是令狐冲"
            android:textColor="#A9A9A9"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />
    </LinearLayout>
    
</LinearLayout>
