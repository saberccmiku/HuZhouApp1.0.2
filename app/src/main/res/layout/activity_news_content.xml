<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/news_content_background"
              android:orientation="vertical">
       <TextView
           android:id="@+id/content_title"
           android:textSize="25sp"
           android:textStyle="bold"
           android:gravity="center_horizontal"
           android:padding="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:gravity="center"
           android:weightSum="5">
           <View
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="0.4"/>
           <TextView
           android:id="@+id/content_date"
           android:layout_weight="1.8"
           android:layout_width="0dp"
           android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/content_writer"
               android:layout_weight="1.2"
               android:layout_width="0dp"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/content_auditor"
               android:layout_weight="1.2"
               android:layout_width="0dp"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="0.4"/>

       </LinearLayout>

       <View
          android:layout_marginTop="10dp"
           android:background="@color/login_text_bg"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>

    <WebView
        android:id="@+id/newsContentWebView"
        android:background="@color/news_content_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    </WebView>

</LinearLayout>