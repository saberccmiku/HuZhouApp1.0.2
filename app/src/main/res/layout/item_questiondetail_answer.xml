<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout 
    android:padding="10dp"
    android:background="@drawable/bg_press_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <com.geekband.huzhouapp.custom.CircleImage
            android:id="@+id/iv_questiondetail_answer_replierIcon"
            android:src="@drawable/head1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
            	android:id="@+id/tv_questiondetail_answer_replierName"
                android:text="小淘气"
            	android:textColor="@color/text_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" | "
            	android:textColor="@color/text_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="国家二级心理咨询师"
            	android:textColor="@color/text_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_questiondetail_answer_content"
            android:text="因为你米放多了。。。不是水的缘故。。。米放少许就行了，一点米就能煮一锅粥的，水也不要放太多，否则到时会喷盖子的。。"
            android:textColor="#000"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
        
        <TextView
            android:id="@+id/tv_questiondetail_answer_time"
            android:text="2016-03-09"
            android:textColor="@color/text_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    
</LinearLayout>

<View
        android:background="@color/divider_color_2"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>